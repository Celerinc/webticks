{
    "compilerOptions": {
        "baseUrl": "./",
        "module": "es2020",
        "target": "es2020",
        "moduleResolution": "node",
        "declaration": true,
        "experimentalDecorators": true,
        "outDir": "./dist",
        "lib": [
            "dom",
            "es2018"
        ]
    },
    "angularCompilerOptions": {
        "skipTemplateCodegen": true,
        "strictMetadataEmit": true,
        "enableResourceInlining": true
    },
    "include": [
        "src/**/*"
    ]
}